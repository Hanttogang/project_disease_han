<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".Disease_List_MainActivity">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/disease_covid19"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#FFFFFF"
            android:text=" 코로나19\n 코로나19에 대한 자세한 정보가 궁금하다면??"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/disease_covid19"
            android:textSize="14sp"
            />
        <Button
            android:id="@+id/disease_influenza"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#F0F0F0"
            android:text=" 인플루엔자(독감)\n 인플루엔자(독감)에 대한 자세한 정보가 궁금하다면??"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/disease_list_influenza"
            android:textSize="14sp"
            />
        <Button
            android:id="@+id/disease_monkeypox"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#FFFFFF"
            android:text=" 원숭이두창\n 원숭이두창에 대한 자세한 정보가 궁금하다면??"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/disease_monkeypox"
            android:textSize="14sp"
            />
        <Button
            android:id="@+id/disease_chickenpox"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#F0F0F0"
            android:text=" 수두\n 수두에 대한 자세한 정보가 굼금하다면?"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/disease_chickenpox"
            android:textSize="14sp"
            />
        <Button
            android:id="@+id/disease_hepatitis_a"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#FFFFFF"
            android:text=" A형 간염\n A형 간염에 대한 자세한 정보가 궁금하다면??"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/disease_hepatitis_a"
            android:textSize="14sp"
            />
        <Button
            android:id="@+id/disease_hepatitis_b"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#F0F0F0"
            android:text=" B형 간염\n B형 간염에 대한 자세한 정보가 궁금하다면??"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/disease_hepatitis_b"
            android:textSize="14sp"
            />

        <Button
            android:id="@+id/disease_hepatitis_c"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:text=" C형 간염\n C형 간염에 대한 자세한 정보가 궁금하다면??"
            android:textColor="#000000"
            android:drawableRight="@drawable/disease_hepatitis_c"
            android:textSize="14sp"
            />

        <Button
            android:id="@+id/disease_cre"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#F0F0F0"
            android:text=" 카바페넴내성장내세균속균종(CRE) 감염증\n CRE에 대한 자세한 정보가 궁금하다면??"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/disease_cre"
            android:textSize="14sp"
            />

        <Button
            android:id="@+id/disease_mumps"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#FFFFFF"
            android:text=" 유행성이하선염\n 유행성이하선염에 대한 자세한 정보가 궁금하다면??"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/disease_mumps"
            android:textSize="14sp"
            />
        <Button
            android:id="@+id/disease_mites"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#F0F0F0"
            android:text=" 쯔쯔가무시\n 쯔쯔가무시에 대한 자세한 정보가 궁금하다면??"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/disease_mites"
            android:textSize="14sp"
            />

    </LinearLayout>


</ScrollView>